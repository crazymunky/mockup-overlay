{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "images/icon-16.png"
  },
  "web_accessible_resources": [
    "templates/*.html",
    "styles/*.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles/app.css"
      ],
      "js": [
        "scripts/jquery.js",
        "scripts/popup.js",
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "background",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
